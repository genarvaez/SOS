<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.layedural.sos.RegisterActivity"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:id="@+id/title_register"
        android:background="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30sp"/>

        <fragment
            android:id="@+id/sign_inFragment"
            android:name="cl.layedural.sos.LoginFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_register"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/divider"
            android:background="@color/lightPrimaryColor"
            android:layout_below="@id/sign_inFragment"
            android:layout_marginHorizontal="70sp"
            android:layout_marginBottom="30sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signBtn"
            android:background="@color/colorPrimary"
            android:layout_below="@id/divider"
            android:text="No account yet? Create one"
            android:layout_centerInParent="true"
            android:layout_marginRight="30sp"
            android:textSize="20sp"/>
    </RelativeLayout>
</LinearLayout>
